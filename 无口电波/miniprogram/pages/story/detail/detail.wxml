<view class="container">
    <image wx:if="{{img.length>0}}"class="pic"src="/images/{{img}}"></image> 
    <image wx:if="{{img.length>0&&!isPlaying}}"class="playIcon"bindtap="onPause"src="/images/stop.png"></image>
    <image wx:else class="playIcon"bindtap="onPlay"src="/images/play.png"></image>
    <view class="imageList">
      <!-- <image class="avatar"src="/images/头像1.jpg"></image> -->
      <!-- <image class="avatar"src="/images/头像2.jpg"></image> -->
      <view class="writer">{{abstract}}</view>
      <!-- <image class="avatar"src="/images/头像3.jpg"></image>
      <image class="avatar"src="/images/头像4.jpg"></image> -->
      <!-- <image class="icon"src="/images/喜爱.png"></image> -->
    </view>
    <view class="detail-headline">{{title}}</view>
    <view class="content">{{content}}</view>
    <view class="date">{{date}}</view>
</view>
